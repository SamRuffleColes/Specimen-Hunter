<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:padding="15dp">
	
    <TextView
        android:id="@+id/textview_capture_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold" />
        
    <TextView
        android:id="@+id/textview_capture_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp" />
        
    <TextView
		android:id="@+id/textview_capture_weight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="14dp" />
    
    <TextView
        android:id="@+id/textview_capture_comment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16dp" />

    <ImageView 
    	android:id="@+id/imageview_capture_thumbnail"
    	android:layout_height="150dp"
    	android:layout_width="match_parent"
    	android:scaleType="centerCrop"
    	android:adjustViewBounds="true"
    	android:contentDescription="@string/cd_thumbnail"
    	android:src="@drawable/icon" />	


</LinearLayout>